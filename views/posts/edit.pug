extends ../layout

block content

    h1(class="mt-4 mb-2") Edit post
    
    <form action="/posts/edit/#{post._id}" method="post">
        <div class="form-group">
            <div class="mb-3">Image</div>
            img(src=post.imageUrl, alt="" width="300px")
            
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Caption</label>
            <input type="text" class="form-control" name="caption" value="#{post.caption}" id="exampleInputPassword1">
        </div>
        
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    