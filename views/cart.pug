extends layout

block content
  h1 Shopping cart
  - var total = 0;
  table.table
    thead
      tr  
        th Name
        th Price
        th Action
    tbody
      each item in cart
        - total += Number(item.price)
        tr  
          td=item.name
          td=item.price
          td 
            a(href="/cart/remove/"+item._id , class="btn btn-info") Remove
    tfoot
      tr
        th Total Price
        th=total
        th 
